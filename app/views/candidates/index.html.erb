<h1>選項列表</h1>

<table class="table">
  <thead>
    <tr>
      <td>投票</td>
      <td>選項名稱</td>
      <td>內容描述</td>
      <td>得票數</td>
    </tr>
  </thead>
  <tbody>
    <% @candidates.each do |candidate| %>
    <tr>
      <td><%= link_to "投給這個", vote_candidate_path(candidate), method: "post", data: { confirm: "確定投給這個人?" }, class:"btn btn-danger btn-xs" %></td>
      <td><%= candidate.name %></td>
      <td><%= candidate.politics %></td>
      <td><%= candidate.vote_logs.size %></td>
    </tr>
    <% end %>
  </tbody>
</table>
